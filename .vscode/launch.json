    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: IMT Module",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/inky-mbta-tracker",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python Debugger: API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/uvicorn",
            "args": ["api_server:app", "--loop", "uvloop"],
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
